{
  "name": "sugarcode",
  "displayName": "SugarCode",
  "description": "SugarCode 的 VS Code 插件 by 一块蒙脱石",
  "version": "1.1.6",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Other"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "publisher": "MRSlouu",
  "icon": "icon.png",
  "contributes": {
    "languages": [
      {
        "id": "SugarCode",
        "extensions": [
          ".sgc"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "icon.svg",
          "dark": "icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "SugarCode",
        "scopeName": "text.SugarCode",
        "path": "./syntaxes/SugarCode.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "SugarCode",
        "path": "./snippets/SugarCode.code-snippets"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Monody-S/SugarCode-Project"
  }
}
